{
  "extends": "@shared/typescript-config/nextjs.json",
  "compilerOptions": {
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./src/*"],
      "@shared/types": ["../../packages/types/src/index.ts"],
      "@shared/tasks-registry": ["../../packages/tasks-registry/src/index.ts"]
    }
  },
  "include": [
    "next-env.d.ts",
    "next.config.mjs",
    "postcss.config.mjs",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "../../next.config.ts"
  ],
  "exclude": ["node_modules"]
}
